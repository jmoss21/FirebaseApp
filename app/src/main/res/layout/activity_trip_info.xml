<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trip_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4253f4"
    tools:context="com.prestech.Trackit.TripInfoActivity">

    <Button
        android:text="Start Trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start_trip_btn"
        android:layout_marginBottom="143dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/odometer_textview"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Odometer"
        android:inputType="numberDecimal"
        android:background="@color/cardview_light_background"
        android:textColor="@color/cardview_dark_background"
        android:textColorLink="@color/wallet_link_text_light"
        android:textAlignment="center" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/car_spinner"
        android:elevation="0dp"
        android:gravity="right|center_vertical|center_horizontal|end"
        android:layout_marginBottom="78dp"
        android:background="@color/cardview_light_background"
        android:layout_above="@+id/odometer_textview"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp" />

</RelativeLayout>
